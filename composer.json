{
    "name": "florianjiri/sorted-linked-list-simple",
    "description": "Test task - create sorted link list (string + int)",
    "authors": [
        {
            "name": "Jiri Florian",
            "email": "jiri.florian@chro.cz"
        }
    ],
    "autoload": {
        "psr-4": {
            "Florianjiri\\SortedLinkedListSimple\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Florianjiri\\SortedLinkedListSimple\\": ["src/","tests/"]
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1.8",
        "symplify/easy-coding-standard": "^11.0"
    },

    "scripts": {
        "phpstan": "php vendor/bin/phpstan analyse -l 8 src tests",
        "ecs": "php vendor/bin/ecs check src",
        "ecs-fix": "php vendor/bin/ecs check src --fix",
        "phpunit": "php vendor/bin/phpunit tests",
        "analyze": [
            "@phpstan",
            "@phpunit",
            "@ecs"
        ]
    }
}
